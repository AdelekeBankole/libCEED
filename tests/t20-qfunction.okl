typedef int CeedInt;
typedef double CeedScalar;
int printf(const char *format, ...);

// *****************************************************************************
kernel void setup(void *ctx, void *qdata, const CeedInt e, CeedInt Q,
                  const CeedScalar *u, const CeedScalar *bu,
                  CeedScalar *v, CeedScalar *bv) {
  for (CeedInt i=0; i<Q; i++; tile(TILE_SIZE)) {
    if (i >= Q) continue;
    CeedScalar *w = ((CeedScalar*)qdata)+e*Q;
    const CeedScalar *u0 = u;
    // Offset computation should depend on inmode & outmode
    const int offset = e*(Q*NC*(DIM+2));
    const CeedScalar *bu0=bu+offset;
    if (fabs(u0[i]-bu0[i])>epsilon) printf("\033[31;1mX\033[m");
    //printf("\tu0[%d]=%f, bu0[%d]=%f\n",i,u0[i],i,bu0[i]);
    w[i] = u0[i];
  }
}

// *****************************************************************************
kernel void mass(void *ctx, void *qdata, const CeedInt e, CeedInt Q,
                 const CeedScalar *u, const CeedScalar *bu,
                 CeedScalar *v, CeedScalar *bv) {
  CeedScalar *v0 = (CeedScalar*)v;
  for (CeedInt i=0; i<Q; i++; tile(TILE_SIZE)) {
    if (i >= Q) continue;
    const CeedScalar *w = ((CeedScalar*)qdata)+e*Q;
    const CeedScalar *u0 = u;
    // Offset computation should depend on inmode & outmode
    const int offset = e*(Q*NC*(DIM+2));
    const CeedScalar *bu0=bu+offset;
    if (fabs(u0[i]-bu0[i])>epsilon) printf("\033[31;1mX\033[m");
    //printf("\tu0[%d]=%f, bu0[%d]=%f\n",i,u0[i],i,bu0[i]);
    v0[i] = w[i] * u0[i];
  }
}
