// *****************************************************************************
typedef int CeedInt;
typedef double CeedScalar;
typedef double* CeedScalarPtrCstPtr @ dim(1,Q);

// *****************************************************************************
kernel void setup(void *ctx, void *qdata, CeedInt Q,
                  const CeedScalarPtrCstPtr u, CeedScalar *const *v, int *rtn) {
  CeedScalar *w = (double*)qdata;
  for (CeedInt i=0; i<Q; i++; tile(TILE_SIZE)) {
    if (i >= Q) continue;
    w[i] = u(0,i);
  }
  *rtn=0;
}

// *****************************************************************************
kernel void mass(void *ctx, void *qdata, CeedInt Q,
                 const CeedScalarPtrCstPtr u, CeedScalarPtrCstPtr v, int *rtn) {
  const CeedScalar *w = (double*)qdata;
  for (CeedInt i=0; i<Q; i++; tile(TILE_SIZE)) {
    if (i >= Q) continue;
    v(0,i) = w[i] * u(0,i);
  }
  *rtn=0;
}
