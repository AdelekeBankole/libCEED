// *****************************************************************************
typedef int CeedInt;
typedef double CeedScalar;

// *****************************************************************************
kernel void setupOrg(void *ctx, void *qdata, const CeedInt qoffset, CeedInt Q,
                  const CeedScalar *u, CeedScalar *const *v, int *rtn) {
  for (CeedInt i=0; i<Q; i++; tile(TILE_SIZE)) {
    if (i >= Q) continue;
    CeedScalar *w = ((CeedScalar*)qdata)+qoffset;
    const CeedScalar *u1=u+Q*NC;
    const CeedScalar *u4=u+Q*NC*(DIM+1);
    w[i] = u1[i]*u4[i];
  }
  *rtn=0;
}

// *****************************************************************************
kernel void setup(void *ctx, void *qdata, const CeedInt qoffset, CeedInt Q,
                  const CeedScalar *u, const CeedScalar *bu, const CeedInt uoffset,
                  CeedScalar *const *v, int *rtn) {
  for (CeedInt i=0; i<Q; i++; tile(TILE_SIZE)) {
    if (i >= Q) continue;
    CeedScalar *w = ((CeedScalar*)qdata)+qoffset;
    const CeedScalar *u1=u+Q*NC;
    const CeedScalar *bu1=u+uoffset+Q*NC;
    const CeedScalar *u4=u+Q*NC*(DIM+1);
    const CeedScalar *bu4=u+uoffset+Q*NC*(DIM+1);
    printf("\n\tu1[%d]*u4[%d]=%f*%f",i,i,u1[i],u4[i]);
    printf(", b1[%d]*b4[%d]=%f*%f",i,i,bu1[i],bu4[i]);
    w[i] = u1[i]*u4[i];
  }
  *rtn=0;
}

// *****************************************************************************
kernel void mass(void *ctx, void *qdata, const CeedInt qoffset, CeedInt Q, const CeedScalar *u,
                 CeedScalar *const v, int *rtn) {
  const CeedScalar *u0 = (CeedScalar*)u;
  CeedScalar *v0 = (CeedScalar*)v;
  for (CeedInt i=0; i<Q; i++; tile(TILE_SIZE)) {
    if (i >= Q) continue;
    const CeedScalar *w = ((CeedScalar*)qdata)+qoffset;
    v0[i] = w[i] * u0[i];
  }
  *rtn=0;
}
